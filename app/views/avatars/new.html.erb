<div class="container">
  <div class= 'title'>
      <h2>Create a new avatar!</h2>
  </div>

  <div class="avatar-form">
    <%= simple_form_for @avatar do |f| %>

      <%= f.input :name%>

      <%= f.input :photo%>
      <%= f.input :photo_cache, as: :hidden%>

      <%= f.input :lives, collection: 1..5 %>

      <%= f.input :attacks, collection: 1..5%>

      <%= f.submit class: 'btn btn-primary'%>

    <% end %>
  </div>

  <div class="back">
    <%= link_to avatars_path do %>
      <i class="fas fa-chevron-left"></i>
            Back to avatars
    <% end %>
  </div>
</div>
